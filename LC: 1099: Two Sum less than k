LC: 1099: Two Sum less than k

class Solution:
    def twoSumLessThanK(self, nums: List[int], k: int) -> int:
        nums.sort()
        l, r= 0, len(nums)-1
        max_sum= -1
        curr_sum=0

        while l< r:
            curr_sum= nums[l]+ nums[r]
            if curr_sum<k:
                max_sum= max(curr_sum, max_sum)
                l+=1
            else:
                r-=1

        return max_sum
